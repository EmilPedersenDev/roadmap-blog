{
  "name": "roadmap-blog",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "nuxt dev",
    "build:client": "nuxt build",
    "generate:client": "nuxt generate",
    "preview:client": "nuxt preview",
    "dev:server": "tsx watch --inspect server/index.ts",
    "build:server": "tsc --project server/tsconfig.json",
    "build:ci": "npm ci --include=dev && npm run build:server && npm run migrate up",
    "start:server": "node dist-server/index.js",
    "postinstall": "nuxt prepare",
    "migrate": "node-pg-migrate"
  },
  "dependencies": {
    "@nuxt/ui": "^4.3.0",
    "@supabase/supabase-js": "^2.89.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.3",
    "jwks-rsa": "^3.2.0",
    "nuxt": "^4.2.2",
    "pg": "^8.16.3",
    "tailwindcss": "^4.1.18",
    "vue": "^3.5.25",
    "vue-router": "^4.6.4",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.16.0",
    "concurrently": "^8.2.2",
    "node-pg-migrate": "^8.0.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
